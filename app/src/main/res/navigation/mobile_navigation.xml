<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_start">

    <fragment
        android:id="@+id/navigation_start"
        android:name="com.example.beaconexchange.ui.start.StartFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_start">

        <action
            android:id="@+id/show_whitelist"
            app:destination="@id/navigation_whitelist"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/stay_in_place"
            app:popEnterAnim="@anim/stay_in_place"
            app:popExitAnim="@anim/slide_out_right"/>


        <action
            android:id="@+id/show_settings"
            app:destination="@id/navigation_settings"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/stay_in_place"
            app:popEnterAnim="@anim/stay_in_place"
            app:popExitAnim="@anim/slide_out_right"/>

    </fragment>

    <fragment
        android:id="@+id/navigation_whitelist"
        android:name="com.example.beaconexchange.ui.whitelist.WhiteListFragment"
        android:label="@string/title_whitelist"
        tools:layout="@layout/fragment_start" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.beaconexchange.ui.settings.SettingsFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_start" />

    <include app:graph="@navigation/permissions" />

</navigation>
