<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeadlineBold">
        <item name="fontFamily">@font/mulibold</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="HeadlineRegular">
        <item name="fontFamily">@font/muli</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextRegular">
        <item name="fontFamily">@font/muli</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">0sp</item>
    </style>

    <style name="ProtegoButton">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@color/blue</item>
        <item name="cornerRadius">6dp</item>
    </style>

    <style name="ProtegoSwitch" parent="TextRegular">
        <item name="android:layout_marginTop">@dimen/spacing3</item>
        <item name="android:layout_marginStart">@dimen/spacing3</item>
        <item name="android:layout_marginEnd">@dimen/spacing3</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
</resources>